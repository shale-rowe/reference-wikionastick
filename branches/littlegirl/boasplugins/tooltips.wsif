// Tooltip macro by legolas558.
// Converted to a plug-in by Little Girl.

woas.macro.register('woas.tooltip', function(macro, tooltip) {
macro.text = '<span title="'+woas.xhtml_encode(tooltip)+'" class="tooltip">'+woas.xhtml_encode(macro.text)+'</span>';
macro.reprocess = true;
return true;
});

