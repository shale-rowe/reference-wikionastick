# *Find* this section:{{{
<label for="cb_fixed_layout"><input type="checkbox" id="cb_fixed_layout" onclick="_set_layout($.checked('cb_fixed_layout'))" />Fixed menu area and topbar<br />
}}}
# *Replace* it with this section:{{{
<label for="cb_fixed_menu"><input type="checkbox" id="cb_fixed_menu" onclick="_set_menu($.checked('cb_fixed_menu'))" />Fixed menu<br />
<label for="cb_fixed_topbar"><input type="checkbox" id="cb_fixed_topbar" onclick="_set_topbar($.checked('cb_fixed_topbar'))" />Fixed topbar<br />
}}}
# *Find* this section:{{{
$("cb_fixed_layout").checked = ($("sw_wiki_header").style.position == "fixed");
if (woas.browser.ie6) $("cb_fixed_layout").disabled = true;
}}}
